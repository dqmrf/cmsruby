%h1 Listing pages

%table.table
  %thead
    %tr
      %th Title
      %th Body
      %th Slug
      %th
      %th
      %th

  %tbody
    - @pages.each do |page|
      %tr
        %td= link_to page.title, url_for_page(page)
        %td= page.body
        %td= url_for_page page
        %td= link_to 'Show', admin_page_path(page)
        %td= link_to 'Edit', edit_admin_page_path(page)
        %td= link_to 'Destroy', admin_page_path(page), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br
%p
  =link_to "New Page", new_admin_page_path, class: "btn btn-success"
  -Type.all.each do |type|
    =link_to "New #{type.name}", new_admin_page_path(type: type.name), class: "btn btn-default"
